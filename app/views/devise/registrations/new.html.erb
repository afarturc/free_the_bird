<section class="flex flex-col items-center justify-center w-full h-[70vh]">
  <h1 class="text-lg font-bold mb-2">Sign up and start chirping</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col gap-3 w-full items-center" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field flex justify-center w-full">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "rounded-xl focus:border-gray-400 focus:ring-0 border-gray-300 bg-gray-100 lg:w-1/3 w-2/3" %>
    </div>

    <div class="field flex justify-center w-full">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username", class: "rounded-xl focus:border-gray-400 focus:ring-0 border-gray-300 bg-gray-100 lg:w-1/3 w-2/3" %>
    </div>

    <div class="field flex justify-center w-full">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "rounded-xl focus:border-gray-400 focus:ring-0 border-gray-300 bg-gray-100 lg:w-1/3 w-2/3" %>
    </div>

    <div class="field flex justify-center w-full">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "rounded-xl focus:border-gray-400 focus:ring-0 border-gray-300 bg-gray-100 lg:w-1/3 w-2/3" %>
    </div>

    <div class="field flex justify-center w-full">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "rounded-xl focus:border-gray-400 focus:ring-0 border-gray-300 bg-gray-100 lg:w-1/3 w-2/3" %>
    </div>

    <div class="field flex justify-center w-full">
      <%= f.file_field :profile_picture, class: "p-2 rounded-xl file:rounded-full file:border-0 file:bg-black file:text-white file:p-2 ring-1 ring-gray-300 bg-gray-100 file:hover:cursor-pointer file:mr-3 lg:w-1/3 w-2/3" %>
    </div>

    <div class="actions flex justify-center w-full">
      <%= f.submit "Sign up", class: "lg:w-1/3 w-2/3 p-3 border bg-black text-white font-bold rounded-xl cursor-pointer" %>
    </div>
  <% end %>
  
  <div class="flex gap-8 justify-center mt-5 text-gray-500">
    <%= render "devise/shared/links" %>
  </div>

</section>