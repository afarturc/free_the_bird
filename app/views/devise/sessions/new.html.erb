<section class="flex flex-col items-center justify-center w-full h-[70vh]">
  <h1 class="text-lg font-bold mb-2">Log in and start chirping</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col gap-3 w-full items-center" }) do |f| %>
    <div class="field flex justify-center w-full">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "rounded-xl focus:border-gray-400 focus:ring-0 border-gray-300 bg-gray-100 lg:w-1/3 w-2/3" %>
    </div>

    <div class="field flex justify-center w-full">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "rounded-xl focus:border-gray-400 focus:ring-0 border-gray-300 bg-gray-100 lg:w-1/3 w-2/3" %>
    </div>

    <div class="actions flex justify-center w-full">
      <%= f.submit "Log in", class: "lg:w-1/3 w-2/3 p-3 border bg-black text-white font-bold rounded-xl cursor-pointer" %>
    </div>
  <% end %>
  
  <div class="flex gap-8 justify-center mt-5 text-gray-500">
    <%= render "devise/shared/links" %>
  </div>

</section>