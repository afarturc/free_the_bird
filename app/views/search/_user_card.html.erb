<%= link_to user_path(user.id), class: "flex items-start p-4 sm:2/3 md:w-1/2 w-full" do %>
    <div class="mr-4">
        <%= image_tag "logo", class: "size-10 border rounded-full drop-shadow-sm" %>
    </div>
    <div class="flex w-full justify-between border-b border-gray-400 pb-4">
        <div class="flex flex-col">
            <p class="text-sm font-semibold"><%= user.username %></p>
            <p class="text-sm text-gray-400"><%= user.name %></p>
        </div>
    </div>
<% end %>