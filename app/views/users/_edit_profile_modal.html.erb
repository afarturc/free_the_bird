<dialog data-edit-profile-dialog-target="dialog" class="p-4 rounded-xl backdrop:bg-black/70 w-screen sm:w-[90vh] xl:w-[70vh]">
    <div class="flex w-full justify-end">
        <button autofocus data-action="click->edit-profile-dialog#closeEdit" class="group">
            <%= icon('fa-solid', 'xmark', class: "text-sm p-2 group-hover:bg-red-500 rounded-full transition ease-in-out delay-75 duration-150") %>
        </button>
    </div>
    <%= form_with model: user, url: user_path(user), method: :patch, class: "flex flex-col gap-4 w-full" do |form| %>
        <div class="flex flex-col w-full border-b border-gray-300">
            <%= form.label :name, "Name", class: "font-semibold text-md" %>
            <%= form.text_field :name, class: "w-full border-0 focus:ring-0", value: user.name %>
        </div>
        <div class="flex flex-col w-full border-b border-gray-300">
            <%= form.label :bio, "Bio", class: "font-semibold text-md" %>
            <%= form.text_area :bio, class: "w-full min-h-10 h-10 border-0 focus:ring-0 resize-y", value: user.bio %>
        </div>
        <%# image_tag current_user.profile_picture, class: "size-10 border rounded-full drop-shadow-sm" %>
        <%= form.submit "Done", class: "w-full border p-2 rounded-xl bg-black text-white text-sm font-bold cursor-pointer" %>
    <% end %>
</dialog>